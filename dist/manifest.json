{
  "manifest_version": 3,
  "name": "Beguide",
  "version": "1.0.1",
  "description": "Beguide est l’outil d’onboarding accompagnant n’importe qui, n’inporte quand et n’importe ou.",

  "browser_action": {
    "default_icon": "icon-32.png"
  },

  "icons": {
    "16": "logo/icon-16.png",
    "32": "logo/icon-32.png",
    "48": "logo/icon-48.png",
    "128": "logo/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["index.js"]
    }
  ]
}
